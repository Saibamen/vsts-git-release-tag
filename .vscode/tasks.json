{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "${workspaceRoot}\\node_modules\\.bin\\gulp",
            "type": "shell",
            "group": "build",
            "args": [
                "watch"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc"
        },
        {
            "label": "package",
            "command": "${workspaceRoot}\\node_modules\\.bin\\tfx",
            "type": "shell",
            "args": [
                "extension ",
                "create",
                "--json",
                "--root",
                "${workspaceRoot}",
                "--manifest-globs",
                ""
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}